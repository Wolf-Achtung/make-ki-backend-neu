# .env.example â€” Hotfix 2025-09-22
LOG_LEVEL=info

# TEMPLATES
TEMPLATE_DIR=templates
TEMPLATE_DE=pdf_template.html
TEMPLATE_EN=pdf_template_en.html

# LLM
LLM_MODE=hybrid
EXEC_SUMMARY_MODEL=gpt-4o
GPT_MODEL_NAME=gpt-4o
GPT_TEMPERATURE=0.2

# PDF
PDF_SERVICE_URL=https://make-ki-pdfservice-production.up.railway.app
PDF_TIMEOUT=120
PDF_POST_MODE=json
PDF_JSON_MINIMAL=1
PDF_STRIP_SCRIPTS=1
PDF_STRIP_PAGE_AT_RULES=1
PDF_MAX_BYTES=600000

# REALTIME (erst aktivieren, wenn Key getestet wurde)
ALLOW_TAVILY=0
TAVILY_API_KEY=

# OPTIONAL: Realtime-Boxen gezielt steuern
SHOW_REGWATCH=1
SHOW_FUNDING_STATUS=1
SHOW_FUNDING_DEADLINES=1
SHOW_TOOLS_NEWS=1
