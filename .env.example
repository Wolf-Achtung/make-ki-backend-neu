
# .env.example – Railway
ENV=production
APP_VERSION=2025.10
LOG_LEVEL=INFO

# CORS – JSON, CSV oder '*'
CORS_ALLOW_ORIGINS_RAW=["https://ki-sicherheit.jetzt","https://make.ki-sicherheit.jetzt"]

# Auth
JWT_SECRET=please-change-me
ADMIN_API_KEY=dev-admin-key

# Database (optional – nur falls genutzt)
DATABASE_URL=postgresql+psycopg://user:pass@host:5432/dbname

# Queue / Redis
QUEUE_ENABLED=false
REDIS_URL=

# PDF-Service
PDF_SERVICE_URL=
PDF_SERVICE_ENABLED=true
PDF_TIMEOUT=15000

# Mail (optional)
SEND_USER_MAIL=false
SEND_ADMIN_MAIL=false
ADMIN_EMAIL=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true
SMTP_SSL=false

# Debug
DEBUG=false
