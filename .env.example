APP_NAME="KI-Status-Report Backend"
ENV="production"
VERSION="2025.10"
LOG_LEVEL="INFO"

# CORS
CORS_ALLOW_ORIGINS="https://ki-sicherheit.jetzt,https://www.ki-sicherheit.jetzt,https://make.ki-sicherheit.jetzt,https://www.make.ki-sicherheit.jetzt"

# DB
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DBNAME?sslmode=require"

# PDF
PDF_SERVICE_URL="https://your-pdf-service.example.com/api/render"
PDF_TIMEOUT="45000"

# Security
SECRET_KEY="change-me-32+chars"
ADMIN_API_TOKEN="change-me-admin-token"

# Queue / Redis
ENABLE_QUEUE="true"
REDIS_URL="redis://default:PASSWORD@redis.railway.internal:6379"
RQ_QUEUES="reports,emails"
RQ_JOB_TIMEOUT="600"
RQ_RESULT_TTL="3600"
RQ_LOG_LEVEL="INFO"

# SMTP (optional; only if you want email delivery)
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USERNAME="username"
SMTP_PASSWORD="password"
SMTP_USE_TLS="true"
MAIL_FROM="no-reply@example.com"
