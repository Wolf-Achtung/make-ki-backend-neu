# .env.example (v3, prod whitelist default)
ENV=production
APP_VERSION=2025.10
LOG_LEVEL=INFO

# CORS – JSON, CSV oder '*'. In Produktion empfehlen wir explizite Whitelist.
CORS_ALLOW_ORIGINS_RAW=["https://ki-sicherheit.jetzt","https://www.ki-sicherheit.jetzt","https://make.ki-sicherheit.jetzt","https://www.make.ki-sicherheit.jetzt","https://ki-foerderung.jetzt","https://www.ki-foerderung.jetzt"]

# Auth (JWT only)
JWT_SECRET=please-change-me

# Database (optional)
DATABASE_URL=

# Queue / Redis (3B: später aktivieren)
QUEUE_ENABLED=false
REDIS_URL=

# PDF-Service (4A)
PDF_SERVICE_URL=
PDF_SERVICE_ENABLED=true
PDF_TIMEOUT=15000

# Mail (5A: standardmäßig aktiv – SMTP muss konfiguriert sein)
SEND_USER_MAIL=true
SEND_ADMIN_MAIL=true
ADMIN_EMAIL=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true
SMTP_SSL=false

# Debug
DEBUG=false
