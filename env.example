# ================================
# Backend: .env.example (local dev)
# ================================
# Copy this file to ".env" for local development (NOT for Railway).
# On Railway you will set variables in the UI as described in variables-README.md.

APP_NAME="KI-Status-Report Backend"
ENV=development
LOG_LEVEL=INFO
DEBUG=false
PORT=8080

# CORS: comma-separated list of allowed origins (no spaces).
CORS_ALLOW_ORIGINS="https://ki-sicherheit.jetzt,https://www.ki-sicherheit.jetzt,https://ki-foerderung.jetzt,https://make.ki-sicherheit.jetzt,https://www.make.ki-sicherheit.jetzt"

# --- Database (Postgres) ---
# Example for local Docker/Postgres; replace with your own when running locally.
# Format: postgresql://USER:PASSWORD@HOST:PORT/DBNAME
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/ki_backend"

# --- Queue / Redis (optional locally) ---
# Enable only if you run Redis locally.
QUEUE_ENABLED=false
# Format: redis://USER:PASSWORD@HOST:PORT
REDIS_URL="redis://default:password@localhost:6379"

# --- PDF service ---
# URL of the PDF render service (your deployed pdf-service /api/render endpoint).
PDF_SERVICE_URL="https://<your-pdf-service-domain>/api/render"
# Timeout (ms)
PDF_TIMEOUT=45000

# --- Auth / Admin bootstrap (if used) ---
# Optional: seed a default admin user in local dev.
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="change-me-please"
JWT_SECRET="change-this-secret"
