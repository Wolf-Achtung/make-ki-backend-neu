# Backend env example (copy to .env for local dev)

APP_NAME="KI-Status-Report Backend"
ENV="development"
VERSION="2025.10"
LOG_LEVEL="DEBUG"

# CORS: comma-separated origins, no trailing slash
CORS_ALLOW_ORIGINS="http://localhost:5173,http://localhost:3000,https://make.ki-sicherheit.jetzt,https://www.make.ki-sicherheit.jetzt,https://ki-sicherheit.jetzt,https://www.ki-sicherheit.jetzt"

# --- Database (use Railway Postgres' connection string) ---
# FastAPI uses SQLAlchemy async with asyncpg. We normalize postgres:// automatically.
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DBNAME"

# Optional queue (can be left empty)
ENABLE_QUEUE="false"
REDIS_URL="redis://:PASSWORD@HOST:PORT/0"

# PDF
PDF_SERVICE_URL="https://your-pdf-service.example.com/api/render"
PDF_TIMEOUT="45000"

# Security
SECRET_KEY="dev-insecure-change-me"
ADMIN_API_TOKEN="change-me-admin-token"
